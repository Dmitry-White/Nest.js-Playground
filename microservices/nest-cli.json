{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/virtual-facility/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/virtual-facility/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/virtual-facility",
  "projects": {
    "alarms-classifier": {
      "type": "application",
      "root": "apps/alarms-classifier",
      "entryFile": "main",
      "sourceRoot": "apps/alarms-classifier/src",
      "compilerOptions": {
        "tsConfigPath": "apps/alarms-classifier/tsconfig.app.json"
      }
    },
    "alarms-generator": {
      "type": "application",
      "root": "apps/alarms-generator",
      "entryFile": "main",
      "sourceRoot": "apps/alarms-generator/src",
      "compilerOptions": {
        "tsConfigPath": "apps/alarms-generator/tsconfig.app.json"
      }
    },
    "alarms-service": {
      "type": "application",
      "root": "apps/alarms-service",
      "entryFile": "main",
      "sourceRoot": "apps/alarms-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/alarms-service/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "health": {
      "type": "library",
      "root": "libs/health",
      "entryFile": "index",
      "sourceRoot": "libs/health/src",
      "compilerOptions": {
        "tsConfigPath": "libs/health/tsconfig.lib.json"
      }
    },
    "inbox": {
      "type": "library",
      "root": "libs/inbox",
      "entryFile": "index",
      "sourceRoot": "libs/inbox/src",
      "compilerOptions": {
        "tsConfigPath": "libs/inbox/tsconfig.lib.json"
      }
    },
    "notifications-service": {
      "type": "application",
      "root": "apps/notifications-service",
      "entryFile": "main",
      "sourceRoot": "apps/notifications-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifications-service/tsconfig.app.json"
      }
    },
    "outbox": {
      "type": "library",
      "root": "libs/outbox",
      "entryFile": "index",
      "sourceRoot": "libs/outbox/src",
      "compilerOptions": {
        "tsConfigPath": "libs/outbox/tsconfig.lib.json"
      }
    },
    "virtual-facility": {
      "type": "application",
      "root": "apps/virtual-facility",
      "entryFile": "main",
      "sourceRoot": "apps/virtual-facility/src",
      "compilerOptions": {
        "tsConfigPath": "apps/virtual-facility/tsconfig.app.json"
      }
    },
    "workflows-service": {
      "type": "application",
      "root": "apps/workflows-service",
      "entryFile": "main",
      "sourceRoot": "apps/workflows-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/workflows-service/tsconfig.app.json"
      }
    }
  }
}